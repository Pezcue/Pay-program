nzt = input('Enter your name: ')
print("Hello", nzt)

sh = input("Enter Hours: ")
sr = input("Enter rate: ")
try:
    fh = float(sh)
    fr = float(sr)
except:
    print("Error, please enter numeric input")
    quit()Pe

print (fh, fr)
if fh > 40 :
    print("Overtime")
    reg = fr * fh
    otp = (fh - 40.0) * (fr * 0.5)
    print (reg,otp)
    xp = reg + otp 
else:
    print("Regular")
    xp = fh * fr
print(nzt, "Pay: ",xp)
